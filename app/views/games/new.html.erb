<div class="container">
  <h1>New Game</h1>
  <ul class="letters">
    <% @letters.each do |letter| %>
    <li><%= letter%></li>
    <% end %>
  </ul>
  <form action="/score" method="POST">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %> <%=
    hidden_field_tag :letters, @letters %>
    <label>Write the longest word</label>
    <div class="input">
      <input type="text" name="word" placeholder="elephant" />
      <input type="submit" value="Play" />
    </div>
  </form>
</div>
